// test_bitwise_compound.aria
// Test all bitwise compound assignment operators

func:main = *int8() {
    print("Testing bitwise compound assignments...");
    
    // Test &=
    uint8:a = 0xFF;
    a &= 0x0F;
    print("After a &= 0x0F:");
    
    // Test |=
    uint8:b = 0x40;
    b |= 0x08;
    print("After b |= 0x08:");
    
    // Test ^=
    uint8:c = 0xFF;
    c ^= 0x55;
    print("After c ^= 0x55:");
    
    // Test <<=
    uint8:d = 1;
    d <<= 4;
    print("After d <<= 4:");
    
    // Test >>=
    uint8:e = 0x80;
    e >>= 2;
    print("After e >>= 2:");
    
    print("All bitwise compound assignments work!");
    
    return 0;
};
