// Simple control flow macro test (inlined macros)

// Define IF/ELSE/END_IF macros
%macro IF 3
if (%1 %2 %3) {
%endmacro

%macro ELSE 0
} else {
%endmacro

%macro END_IF 0
}
%endmacro

// Test function
func:test_if_else(x int32) -> int32 {
    int32:result = 0
    
    IF(x, >, 10)
        result = 100
    ELSE()
        result = 50
    END_IF()
    
    return result
}

func:main() -> int32 {
    int32:result1 = func:test_if_else(15)
    IF(result1, ==, 100)
        func:print_str("✓ Test PASSED\n")
    ELSE()
        func:print_str("✗ Test FAILED\n")
    END_IF()
    
    return 0
}
