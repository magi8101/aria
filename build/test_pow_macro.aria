%macro GEN_POW_INT 1
func:pow_%1 = *%1(%1:base, %1:exponent) {
    if (exponent == 0) {
        return 1;
    }
    %1:result_val = 1;
    %1:i = 0;
    while (i < exponent) {
        result_val = result_val * base;
        i = i + 1;
    }
    return result_val;
};
%endmacro

GEN_POW_INT(int32)

func:main = *int8() {
    int32:r = pow_int32(2, 3) ? 0;
    return 0;
};
