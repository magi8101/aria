{
    "name": "aria-lang",
    "displayName": "Aria Language Support",
    "description": "Language support for Aria - a systems programming language with TBB arithmetic and hybrid memory model",
    "version": "0.1.0",
    "publisher": "aria-lang",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/aria-lang/aria"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],
    "keywords": [
        "aria",
        "systems programming",
        "tbb",
        "memory safety"
    ],
    "activationEvents": [
        "onLanguage:aria"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "aria",
                "aliases": [
                    "Aria",
                    "aria"
                ],
                "extensions": [
                    ".aria"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./icons/aria-icon.png",
                    "dark": "./icons/aria-icon.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "aria",
                "scopeName": "source.aria",
                "path": "./syntaxes/aria.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Aria Language Server",
            "properties": {
                "aria.server.path": {
                    "type": "string",
                    "default": "",
                    "description": "Path to aria-ls executable. If empty, uses bundled binary."
                },
                "aria.server.args": {
                    "type": "array",
                    "default": [],
                    "description": "Additional arguments to pass to aria-ls"
                },
                "aria.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "lint": "eslint src --ext ts",
        "package": "vsce package"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.x",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^6.x",
        "@typescript-eslint/parser": "^6.x",
        "eslint": "^8.x",
        "typescript": "^5.2.0",
        "@vscode/vsce": "^2.21.0"
    }
}