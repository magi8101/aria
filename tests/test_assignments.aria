// Test assignment operators
func:test_basic_assign = *int8() {
    int8:x = 5;
    x = 10;
    return x;  // Should be 10
};

func:test_plus_assign = *int8() {
    int8:x = 5;
    x += 3;
    return x;  // Should be 8
};

func:test_minus_assign = *int8() {
    int8:x = 10;
    x -= 4;
    return x;  // Should be 6
};

func:test_mul_assign = *int8() {
    int8:x = 5;
    x *= 2;
    return x;  // Should be 10
};

func:test_div_assign = *int8() {
    int8:x = 20;
    x /= 4;
    return x;  // Should be 5
};

func:test_mod_assign = *int8() {
    int8:x = 17;
    x %= 5;
    return x;  // Should be 2
};

func:main = *int8() {
    int8:r1 = test_basic_assign() ? -1;    // 10
    int8:r2 = test_plus_assign() ? -1;     // 8
    int8:r3 = test_minus_assign() ? -1;    // 6
    int8:r4 = test_mul_assign() ? -1;      // 10
    int8:r5 = test_div_assign() ? -1;      // 5
    int8:r6 = test_mod_assign() ? -1;      // 2
    return 0;
};
