// Simplified pick statement tests
// Tests basic pattern matching

// Test 1: Exact value match
func:classify_digit = *int8(int8:n) {
    int8:out_val = 0;
    pick(n){
        (0){output = 10;},
        (1){output = 20;},
        (2){output = 30;},
        (*){output = -1;}
    }
    return output;
};

// Test 2: Less than comparison
func:test_less_than = *int8(int8:n) {
    int8:out_val = 0;
    pick(n){
        (<5){output = 1;},
        (<10){output = 2;},
        (*){output = 3;}
    }
    return output;
};

// Test 3: Greater than comparison
func:test_greater_than = *int8(int8:n) {
    int8:out_val = 0;
    pick(n){
        (>100){output = 1;},
        (>50){output = 2;},
        (>0){output = 3;},
        (*){output = 4;}
    }
    return output;
};

// Test 4: Range matching
func:test_range = *int8(int8:n) {
    int8:out_val = 0;
    pick(n){
        (0..5){output = 1;},
        (6..10){output = 2;},
        (11..20){output = 3;},
        (*){output = 4;}
    }
    return output;
};

// Main function
func:main = *int8() {
    int8:r1 = classify_digit(1) ? -1;
    int8:r2 = test_less_than(3) ? -1;
    int8:r3 = test_greater_than(75) ? -1;
    int8:r4 = test_range(8) ? -1;
    print("Pick tests complete");
    return 0;
};
