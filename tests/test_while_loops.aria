// Test while loops
func:test_while_basic = int8() {
    int8:sum = 0;
    int8:i = 0;
    while(i < 5) {
        sum = sum + i;
        i = i + 1;
    }
    return sum;  // Should be 0+1+2+3+4 = 10
};

func:test_while_break = int8() {
    int8:sum = 0;
    int8:i = 0;
    while(i < 10) {
        sum = sum + i;
        i = i + 1;
        if(i == 5) {
            break;
        }
    }
    return sum;  // Should be 0+1+2+3+4 = 10
};

func:test_while_continue = int8() {
    int8:sum = 0;
    int8:i = 0;
    while(i < 6) {
        i = i + 1;
        if(i == 3) {
            continue;  // Skip 3
        }
        sum = sum + i;
    }
    return sum;  // Should be 1+2+4+5+6 = 18
};

func:main = int8() {
    int8:r1 = test_while_basic();     // 10
    int8:r2 = test_while_break();     // 10
    int8:r3 = test_while_continue();  // 18
    return r1 + r2 + r3;  // Should be 38
};
