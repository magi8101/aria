// Sample 11: Recursive Fibonacci

func:fib = *int64(int64:n) {
    if (n <= 1) {
        return n;
    }
    
    result:r1 = fib(n - 1);
    result:r2 = fib(n - 2);
    int64:sum = r1.val + r2.val;
    
    return sum;
};

func:main = *int8() {
    result:r = fib(10);  // fib(10) = 55
    return 0;
};
