// Sample 12: Recursive Factorial

func:factorial = *int64(int64:n) {
    if (n <= 1) {
        return 1;
    }
    
    result:r = factorial(n - 1);
    int64:product;
    product = n * r.val;
    
    return product;
};

func:main = *int8() {
    result:r1 = factorial(5);   // 120
    result:r2 = factorial(10);  // 3628800
    return 0;
};
