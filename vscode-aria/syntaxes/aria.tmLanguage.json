{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Aria",
    "scopeName": "source.aria",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.aria",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.aria",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.aria",
                    "match": "\\b(if|else|while|for|return|break|continue|defer|fall|pick|case|default|label|goto)\\b"
                },
                {
                    "name": "keyword.other.aria",
                    "match": "\\b(func|wild|const|auto|mod|pub|use|as)\\b"
                },
                {
                    "name": "storage.modifier.aria",
                    "match": "\\b(result)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.aria",
                    "match": "\\b(int8|int16|int32|int64|uint8|uint16|uint32|uint64|float32|float64|bool|void|string)\\b"
                },
                {
                    "name": "storage.type.pointer.aria",
                    "match": "\\*"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.aria",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.aria",
                            "match": "\\\\(n|t|r|\\\\|\"|'|0)"
                        },
                        {
                            "name": "constant.character.escape.aria",
                            "match": "\\\\x[0-9A-Fa-f]{2}"
                        },
                        {
                            "name": "constant.character.escape.aria",
                            "match": "\\\\u[0-9A-Fa-f]{4}"
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.aria",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.aria",
                            "match": "\\\\(n|t|r|\\\\|\"|'|0)"
                        }
                    ]
                },
                {
                    "name": "string.quoted.backtick.aria",
                    "begin": "`",
                    "end": "`",
                    "patterns": [
                        {
                            "name": "variable.other.interpolation.aria",
                            "match": "\\$\\{[^}]+\\}"
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.hex.aria",
                    "match": "\\b0[xX][0-9A-Fa-f]+\\b"
                },
                {
                    "name": "constant.numeric.binary.aria",
                    "match": "\\b0[bB][01]+\\b"
                },
                {
                    "name": "constant.numeric.octal.aria",
                    "match": "\\b0[oO][0-7]+\\b"
                },
                {
                    "name": "constant.numeric.float.aria",
                    "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
                },
                {
                    "name": "constant.numeric.integer.aria",
                    "match": "\\b[0-9]+\\b"
                },
                {
                    "name": "constant.language.boolean.aria",
                    "match": "\\b(true|false)\\b"
                },
                {
                    "name": "constant.language.null.aria",
                    "match": "\\bnull\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arithmetic.aria",
                    "match": "[+\\-*/%]"
                },
                {
                    "name": "keyword.operator.comparison.aria",
                    "match": "(==|!=|<|>|<=|>=)"
                },
                {
                    "name": "keyword.operator.logical.aria",
                    "match": "(&&|\\|\\||!)"
                },
                {
                    "name": "keyword.operator.bitwise.aria",
                    "match": "(&|\\||\\^|~|<<|>>)"
                },
                {
                    "name": "keyword.operator.assignment.aria",
                    "match": "(=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=)"
                },
                {
                    "name": "keyword.operator.type.aria",
                    "match": ":"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.aria",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                },
                {
                    "name": "support.function.builtin.aria",
                    "match": "\\b(print|aria\\.alloc|aria\\.free|aria\\.realloc|aria\\.strlen|aria\\.strcmp|aria\\.strcpy|aria\\.strcat)\\b"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.parameter.aria",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*:"
                },
                {
                    "name": "variable.other.aria",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}